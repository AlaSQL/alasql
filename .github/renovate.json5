{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ],
  "automerge": true,
  "automergeStrategy": "squash",
  "dependencyDashboard": true, 
  "schedule": ["every weekend"],
  "ignorePaths": ["modules/**"]

}
